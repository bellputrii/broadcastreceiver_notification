<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- Title Text -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to My Notifications"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#333333"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center" />

    <!-- First Notification Button -->
    <Button
        android:id="@+id/btn_notif"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Send Notification 1"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#6200EE"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        app:cornerRadius="12dp"
        tools:ignore="MissingConstraints" />

    <!-- Second Notification Button -->
    <Button
        android:id="@+id/btn_update"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Send Notification 2"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF5722"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_notif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:cornerRadius="12dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
